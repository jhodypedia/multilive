<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <title><%= pageTitle || 'YT Multi Loop' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- Poppins -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <!-- Remix Icon -->
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
  <!-- CSS -->
  <link rel="stylesheet" href="/public/css/app.css" />
</head>
<body>
  <!-- Top progress bar -->
  <div id="pageload" class="pageload"></div>

  <!-- Loader overlay -->
  <div id="loader" class="loader hidden" aria-hidden="true">
    <div class="loader-backdrop"></div>
    <div class="loader-box">
      <div class="spinner-orb">
        <div></div><div></div><div></div>
      </div>
      <div class="loader-text">Memuat<span class="dotting">...</span></div>
    </div>
  </div>

  <!-- Toasts -->
  <div id="toasts" class="toasts"></div>

  <header class="topbar">
    <div class="brand">
      <i class="ri-live-line"></i> Multi-Loop <small>WIB</small>
    </div>
    <div class="nav-wrapper">
      <button id="navToggle" class="nav-toggle" aria-label="Toggle navigation"><i class="ri-menu-line"></i></button>
      <nav class="nav" id="navMenu" role="navigation">
        <a href="#" data-page="dashboard"><i class="ri-dashboard-line"></i> Dashboard</a>
        <a href="#" data-page="channels"><i class="ri-tv-2-line"></i> Channels</a>
        <a href="#" data-page="playlist"><i class="ri-movie-2-line"></i> Playlist</a>
        <a href="#" data-page="schedules"><i class="ri-time-line"></i> Schedules</a>
        <a href="#" data-page="upload"><i class="ri-upload-2-line"></i> Upload</a>
        <a href="#" data-page="logs"><i class="ri-terminal-line"></i> Logs</a>
      </nav>
    </div>
  </header>

  <main class="container route">
    <section id="page-dashboard" class="page"></section>
    <section id="page-channels"  class="page hidden"></section>
    <section id="page-playlist"  class="page hidden"></section>
    <section id="page-schedules" class="page hidden"></section>
    <section id="page-upload"    class="page hidden"></section>
    <section id="page-logs"      class="page hidden"></section>
  </main>

  <footer class="footer">© <%= new Date().getFullYear() %> • Auto-Loop • TZ: Asia/Jakarta</footer>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/public/js/app.js"></script>
</body>
</html>
